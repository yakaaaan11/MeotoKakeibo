<div class="container">
  <div class="row">
    <div class="mainContents col-sm-12 col-sm-push-4 col-md-12 col-md-push-4">
      <h1 class="subtitle">預金登録</h1>

      <%= form_with model: @form, url: budgets_path, local: true do |fb| %>
        <table class="table">
        <tbody class="bulk-registration-form">
        <%= fb.fields_for :budgets do |f| %>
          <tr>

          <td>
          <%= f.collection_select :category_id, @category_parent_array,:id, :name,{ include_blank: "選択してください"},{class:"form-control"}%>
          </td>
          <td>
          <%= f.text_field :price, class: 'form-control' %>
          </td>
        </tr>
        <% end %>
        </tbody>
        </table>

        <div class="text-center">
        <%= fb.submit '一括登録', class: 'btn btn-primary' %>
        </div>
        <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <h1 class="font-weight-bold">預金登録</h1>
      <div class="container form-contents">
        <%= form_with(model: @deposit, url: deposits_path, method: :post, local: true) do |f| %>
          <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <%= f.label :"現在の預金額", class:"form-label" %>
              <%= f.text_field :price, autofocus: true, autocomplete: "price", placeholder: "0 円",class:"form-control", required: true %>
            </div>
          </div>

          <div class="actions text-center">
            <%= f.submit "登録", class:"btn btn-secondary w-75 m-1" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="mainContents col-sm-12 col-sm-push-4 col-md-12 col-md-push-4">
      <h1 class="subtitle">プロフィール新規登録</h1>

      <div class="container form-contents">
        <%= form_with(model: @family, url: families_path, method: :post, local: true) do |f| %>
            <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <%= f.label :"ニックネーム", class:"form-label" %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", required: true %>
            </div>
          </div>

          <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <%= f.label :"アイコン", class:"form-label" %>
              <%= f.attachment_field :image, class:"form-control"%>
            </div>
          </div>

          <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <%= f.label :"性別", class:"form-label" %>
              <%= f.select :gender,[["男性", 1], ["女性", 2], ["その他", 3], ["無回答", 4]], {include_blank: "選択して下さい"}, {class:"form-label"} %>
            </div>
          </div>

          <div class="field form-group row">
            <div class="col-md-12 mb-6">
              <%= f.label :"誕生日", class:"form-label" %>
              <!--月だけ単位がついている-->
              <%= f.date_select(
                :birthday,
                start_year: 1930,
                end_year: (Time.now.year - 18),
                default: Date.new(1990,1,1,)) %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "新規登録", class:"form-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
